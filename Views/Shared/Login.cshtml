@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <form asp-action="Login" asp-controller="UserUtils" method="post">
                        <h3 class="mb-5">Sign in</h3>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group text-start">
                            <label asp-for="Email" class="control-label"></label>
                            <div class="form-outline mb-4 border shadow-2-strong" style="border-radius: 1rem;">
                                <input asp-for="Email" class="form-control form-control-lg" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group text-start">
                            <label asp-for="Password" class="control-label"></label>
                            <div class="form-outline mb-4 shadow-2-strong border" style="border-radius: 1rem;">
                                <input asp-for="Password" class="form-control form-control-lg" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        @Html.AntiForgeryToken()
                        <button class="btn login-btn btn-block mb-2" style="display: inline-block; margin-right: 20px; margin-left: 5px;" type="submit">Login</button>
                    </form>

                    <a asp-controller="Customer" asp-action="Register" class="btn login-btn btn-block mb-2" style="display: inline-block; margin-right: 20px; margin-left: 5px;">
                        Register
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@if (ViewData["ReturnUrl"] != null)
{
    <div>
        <p>You must be logged in to access this page:</p>
        <p><a href="@ViewData["ReturnUrl"]">Return to previous page</a></p>
    </div>
}
