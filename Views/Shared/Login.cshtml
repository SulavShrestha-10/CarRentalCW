@model LoginViewModel


<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                    <h3 class="mb-5">Sign in</h3>
                    <form asp-action="Login" asp-controller="UserUtils" method="post">
                        <div asp-validation-summary="All" class="text-danger">
                            <div class="form-outline mb-4">
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input type="email" class="form-control form-control-lg" />
                                <label class="form-label">Email</label>
                               
                            </div>

                            <div class="form-outline mb-4">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input type="password" class="form-control form-control-lg" />
                                <label class="form-label">Password</label>
                            </div>

                            <button class="btn login-btn btn-block" style="display: inline-block; margin-right: 20px; margin-left: 5px;" type="submit">Login</button>
                        </div>
                        </form>

                        <hr class="my-4">

                        <button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;">
                            <i class="fab fa-google me-2"></i> Sign in with google
                        </button>

                        <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;">
                            <i class="fab fa-facebook-f me-2"></i>Sign in with facebook
                        </button>

                        <a asp-controller="Customer" asp-action="Register" class="btn login-btn btn-block mb-2" style="display: inline-block; margin-right: 20px; margin-left: 5px;">
                            Register
                        </a>
                </div>
            </div>
        </div>
    </div>
</div>


@if (ViewData["ReturnUrl"] != null)
{
    <div>
        <p>You must be logged in to access this page:</p>
        <p><a href="@ViewData["ReturnUrl"]">Return to previous page</a></p>
    </div>
}
