@model CarRentalApp.Models.Offer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="row">
    <div class="col-sm-2">
        <label asp-for="Car.Manufacturer"></label>
    </div>
    <div class="col-sm-10">
        <label asp-for="Car.Manufacturer"></label>
        <span asp-for="Car.Manufacturer"></span>
    </div>

    <div class="col-sm-2">
        <label asp-for="Car.Model"></label>
    </div>
    <div class="col-sm-10">
        <label asp-for="Car.Model"></label>
        <span asp-for="Car.Model"></span>
    </div>

    <div class="col-sm-2">
        <label asp-for="Car.Color"></label>
    </div>
    <div class="col-sm-10">
        <label asp-for="Car.Color"></label>
        <span asp-for="Car.Color"></span>
    </div>

    <div class="col-sm-2">
        <label asp-for="DiscountRate"></label>
    </div>
    <div class="col-sm-10">
        <label asp-for="DiscountRate"></label>
        <span asp-for="DiscountRate"></span>
    </div>
</div>

<div class="mt-4">
    <form action="@Url.Action("Delete", "Offer", new { id = Model.OfferID })" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>