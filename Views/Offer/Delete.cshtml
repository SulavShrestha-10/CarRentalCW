@model CarRentalApp.Models.Offer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="row">
    <div class="form-group row">
        <label class="col-sm-2">Car:</label>
        <div class="col-sm-10">
            <span>@Model.Car?.Manufacturer @Model.Car?.Model</span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Offer Description:</label>
        <div class="col-sm-10">
            <span>@Model.OfferDescription</span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2">Discount Rate:</label>
        <div class="col-sm-10">
            <span>@Model.DiscountRate</span>
        </div>
    </div>

</div>

<div class="mt-4">
    <form action="@Url.Action("Delete", "Offer", new { id = Model.OfferID })" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>