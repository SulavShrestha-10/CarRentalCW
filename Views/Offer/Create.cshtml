@model CarRentalApp.Models.Offer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarID" class="control-label"></label>
                <select asp-for="CarID" class="form-control" asp-items="ViewBag.CarID"></select>
                <span asp-validation-for="CarID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountRate" class="control-label"></label>
                <input asp-for="DiscountRate" class="form-control" />
                <span asp-validation-for="DiscountRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfferDescription" class="control-label"></label>
                <textarea asp-for="OfferDescription" class="form-control"></textarea>
                <span asp-validation-for="OfferDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfferEndDate" class="control-label"></label>
                <input asp-for="OfferEndDate" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                <span asp-validation-for="OfferEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
