@model CarRentalApp.Models.DamageUpdateViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Payment Details</h1>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label for="totalCost">Total Cost:</label>
        <input type="number" class="form-control" id="totalCost" name="TotalCost" required>
    </div>
    <div class="form-group">
        <label for="paymentDeadline">Payment Deadline:</label>
        <input type="date" class="form-control" id="paymentDeadline" name="PaymentDeadline" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
