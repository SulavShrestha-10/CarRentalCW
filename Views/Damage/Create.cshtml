@model CarRentalApp.Models.DamageViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Damage Report</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DamageDescription" class="control-label"></label>
                <textarea asp-for="DamageDescription" rows="5" class="form-control"></textarea>
                <span asp-validation-for="DamageDescription" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="CarID" />
            <input type="hidden" asp-for="ReqID" />
            <input type="hidden" asp-for="UserID" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.CarID" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
