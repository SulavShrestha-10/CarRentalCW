@model IEnumerable<CarRentalApp.Models.Identity.AppUser>

<h1 class="my-3 text-center text-white" style="background-color: teal; padding: 1rem;">Customers</h1>

<main class="table">
    <div class="table__body">
        <table>
            <thead>
                <tr>
                    <th> Customer Id</th>
                    <th> Customer Name</th>
                    <th> Customer Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.FirstName @customer.LastName</td>
                        <td>@customer.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>
