@model IEnumerable<CarRentalApp.Models.Identity.AppUser>

<h1 class="my-3 text-center text-white" style="background-color: #ff6b6b; padding: 1rem;">Customers</h1>

<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.FirstName @customer.LastName</td>
                <td>@customer.Email</td>
            </tr>
        }
    </tbody>
</table>
