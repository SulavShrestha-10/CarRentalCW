@model LoginViewModel

<h2>Login</h2>

<form asp-action="Login" asp-controller="Customer" method="post">
    <div asp-validation-summary="All"></div>

    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="Email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="Password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <button type="submit">Login</button>
</form>

<p>
    <a asp-controller="Account" asp-action="Register">Register</a> |
    <a asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
</p>

@if (ViewData["ReturnUrl"] != null)
{
    <div>
        <p>You must be logged in to access this page:</p>
        <p><a href="@ViewData["ReturnUrl"]">Return to previous page</a></p>
    </div>
}
