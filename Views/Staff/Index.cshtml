@model IEnumerable<CarRentalApp.Models.Identity.AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-3 text-center text-white" style="background-color: #ff6b6b; padding: 1rem;">Staffs</h1>
<a href="@Url.Action("Register", "Staff")">Register Staff</a>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    @{
                        var roles = await ViewBag.UserManager.GetRolesAsync(user);
                        foreach (var role in roles)
                        {
                            <span>@role</span>
                        }
   
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
