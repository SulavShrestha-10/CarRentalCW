@{
    ViewData["Title"] = "Home Page";
}

<!-- ======= Hero Section ======= -->
<section id="hero">
    <div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">

        <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

        <div class="carousel-inner" role="listbox">

            <!-- Slide 1 -->
            <div class="carousel-item active" style="background-image: url(images/slide/slide_1.jpg)">
                <div class="container">
                    <h2>Welcome to <span>Car Rental App</span></h2>
                    <p>Rent a car at affordable prices and get around in style with our fleet of vehicles. Whether you need a car for a day, a week or a month, we have got you covered.</p>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item" style="background-image: url(images/slide/slide_2.jpg)">
                <div class="container">
                    <h2>Choose from a Wide Range of Vehicles</h2>
                    <p>We offer a variety of vehicles to suit your needs, including sedans, SUVs, trucks, and vans. Our vehicles are well-maintained and regularly serviced to ensure your safety and comfort on the road.</p>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item" style="background-image: url(images/slide/slide_3.jpg)">
                <div class="container">
                    <h2>Explore the World on Your Own Terms</h2>
                    <p>With our car rental services, you can explore the world on your own terms. Take a road trip, visit new places, and create unforgettable memories with the people you love.</p>
                </div>
            </div>

        </div>

        <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
        </a>

        <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
        </a>

    </div>
</section><!-- End Hero -->

<main id="main">

    <!-- ======= Services Section ======= -->
    <section id="services" class="services services">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Services</h2>
                <p>We offer a range of services to make your car rental experience hassle-free and enjoyable.</p>
            </div>

            <div class="row">
                <div class="col-lg-4 col-md-6 icon-box" data-aos="zoom-in" data-aos-delay="100">
                    <div class="icon"><i class="fas fa-car"></i></div>
                    <h4 class="title"><a href="#">Wide Range of Vehicles</a></h4>
                    <p class="description">Choose from a variety of vehicles to suit your needs, including sedans, SUVs, trucks, and vans.</p>
                </div>
                <div class="col-lg-4 col-md-6 icon-box" data-aos="zoom-in" data-aos-delay="200">
                    <div class="icon"><i class="fas fa-map-marked-alt"></i></div>
                    <h4 class="title"><a href="#">Pickup and Drop-off Locations</a></h4>
                    <p class="description">We offer convenient pickup and drop-off locations in various cities and airports.</p>
                </div>
                <div class="col-lg-4 col-md-6 icon-box" data-aos="zoom-in" data-aos-delay="300">
                    <div class="icon"><i class="fas fa-shield-alt"></i></div>
                    <h4 class="title"><a href="#">Insurance Options</a></h4>
                    <p class="description">We provide different insurance options to protect you and your rental car while on the road.</p>
                </div>
                <div class="col-lg-4 col-md-6 icon-box" data-aos="zoom-in" data-aos-delay="100">
                    <div class="icon"><i class="fas fa-gas-pump"></i></div>
                    <h4 class="title"><a href="#">Fuel Policy</a></h4>
                    <p class="description">We have flexible fuel policies to match your travel plans and budget.</p>
                </div>
                <div class="col-lg-4 col-md-6 icon-box" data-aos="zoom-in" data-aos-delay="200">
                    <div class="icon"><i class="fas fa-wrench"></i></div>
                    <h4 class="title"><a href="#">Maintenance and Support</a></h4>
                    <p class="description">Our cars are well-maintained, and we offer 24/7 support in case of any issues.</p>
                </div>
                <div class="col-lg-4 col-md-6 icon-box" data-aos="zoom-in" data-aos-delay="300">
                    <div class="icon"><i class="fas fa-id-card"></i></div>
                    <h4 class="title"><a href="#">Driver Requirements</a></h4>
                    <p class="description">We have different driver requirements, including age limits and driver's licenses.</p>
                </div>
            </div>

        </div>
    </section>
    <!-- End Services Section -->
    <!-- ======= Gallery Section ======= -->
    <section id="gallery" class="gallery">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Gallery</h2>
                <p>Take a look at our fleet of cars available for rental! From compact cars to luxury vehicles, we have the perfect car for any occasion. Whether you're looking for a car to take you on a road trip or simply need a car to get around town, we've got you covered. Browse through our gallery to see our cars in action.</p>
            </div>

            <div class="gallery-slider swiper">
                <div class="swiper-wrapper align-items-center">
                    <div class="swiper-slide"><a class="gallery-lightbox" href="images/gallery/gallery_1.jpg"><img src="images/gallery/gallery_1.jpg" class="img-fluid" alt=""></a></div>
                    <div class="swiper-slide"><a class="gallery-lightbox" href="images/gallery/gallery_2.jpg"><img src="images/gallery/gallery_2.jpg" class="img-fluid" alt=""></a></div>
                    <div class="swiper-slide"><a class="gallery-lightbox" href="images/gallery/gallery_3.jpg"><img src="images/gallery/gallery_3.jpg" class="img-fluid" alt=""></a></div>
                    <div class="swiper-slide"><a class="gallery-lightbox" href="images/gallery/gallery_4.jpg"><img src="images/gallery/gallery_4.jpg" class="img-fluid" alt=""></a></div>
                    <div class="swiper-slide"><a class="gallery-lightbox" href="images/gallery/gallery_5.jpg"><img src="images/gallery/gallery_5.jpg" class="img-fluid" alt=""></a></div>
                    <div class="swiper-slide"><a class="gallery-lightbox" href="images/gallery/gallery_6.jpg"><img src="images/gallery/gallery_6.jpg" class="img-fluid" alt=""></a></div>
                    <div class="swiper-slide"><a class="gallery-lightbox" href="images/gallery/gallery_7.jpg"><img src="images/gallery/gallery_7.jpg" class="img-fluid" alt=""></a></div>
                    <div class="swiper-slide"><a class="gallery-lightbox" href="images/gallery/gallery_8.jpg"><img src="images/gallery/gallery_8.jpg" class="img-fluid" alt=""></a></div>
                </div>
                <div class="swiper-pagination"></div>
            </div>

        </div>
    </section><!-- End Gallery Section -->
    <!-- ======= Contact Section ======= -->
