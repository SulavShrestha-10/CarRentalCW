@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CarViewModel

<h1 class="my-3 text-center text-white" style="background-color: teal; padding: 1rem;">Create New Car</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group mb-4">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="RentalRate" class="control-label"></label>
                <input asp-for="RentalRate" class="form-control" />
                <span asp-validation-for="RentalRate" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="VehicleNo" class="control-label"></label>
                <input asp-for="VehicleNo" class="form-control" />
                <span asp-validation-for="VehicleNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="CarImage" class="control-label"></label>
                <input asp-for="CarImage" type="file" name="CarImage" class="form-control" />
            </div>
            <div class="form-group ">
                <input type="submit" value="Create" class="btn login-btn" />
            </div>
        </form>
    </div>
</div>
